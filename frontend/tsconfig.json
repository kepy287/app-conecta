{
    "compilerOptions": {
      "target": "ESNext", // O la versión de ECMAScript que prefieras
      "module": "ESNext", // O "CommonJS" dependiendo de tu configuración
      "jsx": "react-jsx", // Para usar la nueva transformación JSX de React
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true // Evita que TypeScript emita archivos .js (CRA lo maneja)
    },
    "include": [
      "src" // Incluye todos los archivos dentro de la carpeta src
    ]
  }